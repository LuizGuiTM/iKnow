@model FuncionarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Cadastro de Funcionário</h2>
<div class="col-lg-3">
    <form action="SaveFunc" method="post" enctype="multipart/form-data">
        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
        <input type="hidden" name="FuncionarioRH" value="@ViewBag.FuncionarioRH" />
        @*<label type="hidden" for="Id" class="control-label">Código</label>*@
        <input type="hidden" Name="Id" value="@Model.Id" class="form-control" />
        <br />

        @if (!@ViewBag.FuncionarioRH == true)
        {
            <label for="Cpf" class="control-label">CPF</label>
            <input type="text" Name="Cpf" value="@Model.Cpf" class="form-control" />
            <span asp-validation-for="Cpf" class="text-danger"></span>
            <br />

            <input type="date" Name="DataNasc" value="@Model.DataNasc" class="form-control" hidden />

            <label for="Senha" class="control-label">Senha</label>
            <input type="password" Name="Senha" value="@Model.Senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
            <br />

            <br />
            <input type="submit" value="Salvar" class="btn btn-success" />
            <br />
        }
        else
        {
            @if (ViewBag.Operacao == "I")
            {
                <label for="Cpf" class="control-label">CPF</label>
                <input type="text" Name="Cpf" value="@Model.Cpf" class="form-control" />
            }
            else
            {
                <label for="Cpf" class="control-label">CPF</label>
                <input type="text" Name="Cpf" value="@Model.Cpf" class="form-control disabled" readonly />
            }
            <span asp-validation-for="Cpf" class="text-danger"></span>
            <br />

            <label for="Nome" class="control-label">Nome</label>
            <input type="text" Name="Nome" value="@Model.Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
            <br />

            <label for="Salario" class="control-label">Salário</label>
            <input type="number" Name="Salario" value="@Model.Salario" class="form-control" />
            <span asp-validation-for="Salario" class="text-danger"></span>
            <br />

            <label for="Cargo" class="control-label">Cargo</label>
            <input type="text" Name="Cargo" value="@Model.Cargo" class="form-control" />
            <span asp-validation-for="Cargo" class="text-danger"></span>
            <br />

            <label for="DataNasc" class="control-label">Data de Nascimento</label>
            <input type="date" Name="DataNasc" value="@Model.DataNasc" class="form-control" />
            <span asp-validation-for="DataNasc" class="text-danger"></span>
            <br />

            <label for="Cidade" class="control-label">Cidade</label>
            <input type="text" Name="Cidade" value="@Model.Cidade" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
            <br />

            <label for="Estado" class="control-label">Estado</label>
            <input type="text" Name="Estado" value="@Model.Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
            <br />

            @if (ViewBag.Operacao == "I")
            {
                <label for="Senha" class="control-label">Senha</label>
                <input type="password" Name="Senha" value="@Model.Senha" class="form-control" />
            }
            else
            {
                <label for="Senha" class="control-label">Senha</label>
                <input type="password" Name="Senha" value="@Model.Senha" class="form-control disabled" readonly />
            }
            <span asp-validation-for="Senha" class="text-danger"></span>
            <br />
            <br />
            <input type="submit" value="Salvar" class="btn btn-success" />
            <br />
        }
    </form>
</div>
