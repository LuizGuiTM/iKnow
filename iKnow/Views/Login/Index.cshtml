@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
</header>

<body class="textured ">
    <br />
    <form action="/login/Fazlogin" class="form border border-primary p-4 white FormLogin BorderForms" method="post">
        <h2 class="text-warning text-dark">Login</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="usuario" class="control-label">CPF</label>
                    <input type="text" name="usuario" class="form-control" required placeholder='CPF...' />
                </div>
                <div class="form-group">
                    <label for="senha" class="control-label">Senha</label>
                    <input type="password" name="senha" class="form-control" required placeholder='Senha...' />
                </div>
                <br />
                <span class="text-danger"> @ViewBag.Erro</span>
                <input type="submit" value="Login" class="btn btn-primary" />
                <a href="/funcionario/create" class="btn btn-info">Primeiro Acesso</a>
                <br />
                <br />
            </div>
        </div>
    </form>



</body>