@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
</header>

<body class="textured ">
    <div class="container" style="margin-right: 8vw;">
    <br />
    <form action="/login/Fazlogin" class="form border border-primary p-4 white FormLogin BorderForms login" method="post">
            <img src="~/img/iknowfull2.png" style="width:180px; height: auto; margin-left:30%;margin-bottom:10px" />
            <h2 style="color:#ec673a; font-weight:bold;">Login</h2>
        <div class="row">
                <div class="col-md-12" style="font-weight:bold;margin-top:10px">
                <div class="form-group">
                    <label for="usuario" class="control-label">CPF</label>
                    <input type="text" name="usuario" class="form-control" required placeholder='CPF...' />
                </div>
                <div class="form-group">
                    <label for="senha" class="control-label">Senha</label>
                    <input type="password" name="senha" class="form-control" required placeholder='Senha...' />
                </div>
                <span class="text-danger"> @ViewBag.Erro</span>
                <br />
                <div style="text-align:center">
                        <input type="submit" value="Login" class="botaologin" style="background-color: #ec673a; margin-right:15px" />
                        <input type="button" value="Primeiro Acesso" class="botaologin" style="background-color: #00abbe;text-decoration: none;" onclick="redirecionar()" />
                </div>
            </div>
        </div>
    </form>

</div>
</body>

<script>

    function redirecionar() {
        window.location.href = "/funcionario/create";
    }
</script>