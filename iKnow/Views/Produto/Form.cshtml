@model ProdutoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link href="@Url.Content("~/css/consulta.css")" rel="stylesheet" type="text/css" />
</header>


    <body class="cadastro">
    <div class="container">
        <br />
        <form action="Save" method="post" class="cadastrocampo" enctype="multipart/form-data">
            <h2 class="titulocadastro">Cadastro de Produto</h2>
            <br />
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Nome" class="control-label">Nome</label>
                        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" />
                    </div>
                    <div class="form-group">
                        <label for="Preco" class="control-label">Preço</label>
                        <input type="text" class="form-control" id="Preco" name="Preco" value="@Model.Preco" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Categoria" class="control-label">Categoria</label>
                        <input type="text" class="form-control" id="Categoria" name="Categoria" value="@Model.Categoria" />
                    </div>
                    <div class="form-group">
                        <label for="QtdDisponivel" class="control-label">Quantidade disponível</label>
                        <input type="number" class="form-control" id="QtdDisponivel" name="QtdDisponivel" value="@Model.QtdDisponivel" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Imagem" class="control-label">Imagem</label> <br />
                        <input type="file" name="Imagem" id="Imagem" onchange="exibirImagem()" class="inseririmagem">
                        <img id="imgPreview" src="data:image/jpeg;base64,@Model.ImagemEmBase64" class="img-responsive" style="padding-top:10px;" width="100">
                        <br />
                        <br />
                        <span asp-validation-for="Imagem" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="botaologin" style="background-color:#ec673a;">Salvar dados</button>
        </form>
    </div>
    </body>

<script>
    function exibirImagem() {
        var fileInput = document.getElementById("Imagem");
        var imgPreview = document.getElementById("imgPreview");

        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                imgPreview.src = e.target.result;
                imgPreview.style.display = "block"; // Mostra a imagem
            };
            reader.readAsDataURL(fileInput.files[0]);
        } else {
            imgPreview.src = "";
            imgPreview.style.display = "none"; // Esconde a imagem
        }
    }
</script>
