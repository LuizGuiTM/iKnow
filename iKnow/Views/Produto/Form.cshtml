@model ProdutoViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
</header>

<body class= "textured ">
    <br />
    <form action="Save" method="post" class="form border border-primary p-4 white" enctype="multipart/form-data">
        <h2 class="text-warning text-dark">Cadastro de Produto</h2>
        <br />
        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
        <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Nome" class="control-label">Nome</label>
                    <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" />
                </div>
                <div class="form-group">
                    <label for="Preco" class="control-label">Preço</label>
                    <input type="text" class="form-control" id="Preco" name="Preco" value="@Model.Preco" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                     <label for="Categoria" class="control-label">Categoria</label>
                     <input type="text" class="form-control" id="Categoria" name="Categoria" value="@Model.Categoria" />
                </div>
                <div class="form-group">
                    <label for="QtdDisponivel" class="control-label">Quantidade disponível</label>
                    <input type="number" class="form-control" id="QtdDisponivel" name="QtdDisponivel" value="@Model.QtdDisponivel" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Imagem" class="control-label">Imagem</label>
                    <input type="file" class="form-control-file" id="Imagem" name="Imagem" onchange="exibirImagem()">
                    <img id="imgPreview" src="data:image/jpeg;base64,@Model.ImagemEmBase64" class="img-responsive" width="100">
                    <br />
                    <br />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Salvar dados</button>
    </form>
</body>




<script>
    function exibirImagem() {
        var oFReader = new FileReader();
        oFReader.readAsDataURL(document.getElementById("Imagem").files[0]);
        oFReader.onload = function (oFREvent) {
            document.getElementById("imgPreview").src = oFREvent.target.result;
        };
    }
</script>