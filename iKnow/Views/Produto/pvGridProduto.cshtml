@model List<ProdutoViewModel>

<div class="table-scroll" style="max-height: 37vh;">
    <table class="table table-striped rounded" style="overflow: auto">
        <tr>
            <th>Ações</th>
            <th>Código</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Quantidade Disponivel</th>
            <th>Preço</th>
        </tr>
        @foreach (var produto in Model)
        {
            <tr>
                <td style="min-width: 150px;">
                    <a href="/produto/Edit?id=@produto.Id" class="btn btn-info" style="margin-right: 8px;border-radius: 60px;">Alterar</a>
                    <a href="javascript:deleteProduto(@produto.Id)" class="btn btn-danger" style="width: 38px;height: 38px;border-radius: 50%;">X</a>
                </td>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.Categoria</td>
                <td>@produto.QtdDisponivel</td>
                <td>@produto.Preco.ToString("0.00")</td>
            </tr>
        }
    </table>
</div>