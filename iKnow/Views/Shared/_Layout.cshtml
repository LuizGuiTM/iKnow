<!DOCTYPE html>
<html lang="en">
<head>
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iKnow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <header id="header">
        <div class="logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/img/iknowfull.png" alt="image of the logo" id="header-img" width="100px" height="54px" />
            </a>
        </div>
        <nav id="nav-bar">
            <ul id="menu">
                @if (ViewBag.Logado == true)
                {
                    @if (ViewBag.FuncionarioRH == true)
                    {
                        <li>
                            <a class="nav-link" asp-controller="Funcionario" asp-action="Index">Gerenciar Funcionarios</a>
                        </li>
                    }
                    <li>
                        <a class="nav-link" asp-controller="Cliente" asp-action="Index">Gerenciar Clientes</a>
                    </li>
                    <li>
                        <a class="nav-link"  asp-controller="Produto" asp-action="Index">Gerenciar Produtos</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Login" asp-action="LogOff">Log Off</a>
                    </li>
                }
                else
                {
                    <li>
                        <a class="nav-link" asp-controller="Loja" asp-action="Index">Fazer Compras</a>
                    </li>
                    <li>
                        <a class="nav-link" asp-controller="Login" asp-action="Index">Área do Funcionário</a>
                    </li>
                }
            </ul>
            </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
<footer class="footer white" style="position: absolute;bottom: 0; width: 100%;">
        <div class="footer-content">
            <img src="~/img/iknowfull.png" width="100px" height="52px" />
            &copy; Copyright iKnow
        </div>
    </footer>
</html>

